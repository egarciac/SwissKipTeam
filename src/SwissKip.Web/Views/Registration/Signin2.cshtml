@using System.Configuration
@model SwissKip.Web.Models.DataheirCreateModel
@{
    ViewBag.Title = "DataHeir";
    if (Session["Signin1Store"] == null)
    {
        Response.Redirect("Signin1");
    }
}

<div style="clear:both; height:60px;"></div>

<div id="cajaregistro" align="center">
    @using (Html.BeginForm())
    {
        
    <div>
        <div style="padding-bottom:10px;padding-top:7px;"><span class="rojo22">Step 2 of 6:</span><br><br><span class="negro17">Your e-mail address has been confirmed.</span><br><br>
        <span class="black22">Choose your Data-Heir</span></div>
        <div style="padding-bottom:30px;"><a href="" class="gris13">Learn more about your Data-Heir</a></div>
    </div>
        
    <div style="width:540px;margin:auto; margin-top:50px; overflow:hidden;">
        
        <div style="overflow:hidden; width:380px;margin:auto;">            
            <div class="interior1-form-1">
                <div class="interior1-form-text1 negro14">First Name</div>
                <div class="interior1-form-inpt1" align="left">@Html.TextBoxFor(x => x.FirstName, new { @class = "cajausername" })
                <div>@Html.ValidationMessageFor(x => x.FirstName)</div></div>
            </div>
            <div class="interior1-form-1">
                <div class="interior1-form-text1 negro14">Last Name</div>
                <div class="interior1-form-inpt1" align="left">@Html.TextBoxFor(x => x.LastName, new { @class = "cajausername" })
                <div>@Html.ValidationMessageFor(x => x.LastName)</div></div>
            </div>
            <div class="interior1-form-1">
                <div class="interior1-form-text1 negro14">Email</div>
                <div class="interior1-form-inpt1" align="left">@Html.TextBoxFor(x => x.Email, new { @class = "cajausername" })
                <div>@Html.ValidationMessage("Email")</div></div>
            </div>
        </div>

        <div style="float:right; margin-top:50px;margin-bottom:70px;">
            <div style=" float:right;"><input type="submit" value="Next" class="botonext" /></div>
            <div style="float:right;margin-right:10px;"><input type="button" value="Back" class="botonext" onclick="history.back();" /></div>
        </div>
    </div>
    <div style="clear:both;"></div>
    <div class="registropasos">
            <div style="float:left;"><img src="/content/images/processok.gif" /></div>
            <div style="float:left;"><img src="/content/images/lineprocessok.gif" /></div>
            <div style="float:left;"><img src="/content/images/processno.gif" /></div>
            <div style="float:left;"><img src="/content/images/lineprocess.gif" /></div>
            <div style="float:left;"><img src="/content/images/processvacio.gif" /></div>
            <div style="float:left;"><img src="/content/images/lineprocess.gif" /></div>
            <div style="float:left;"><img src="/content/images/processvacio.gif" /></div>
            <div style="float:left;"><img src="/content/images/lineprocess.gif" /></div>
            <div style="float:left;"><img src="/content/images/processvacio.gif" /></div>
            <div style="float:left;"><img src="/content/images/lineprocess.gif" /></div>
            <div style="float:left;"><img src="/content/images/processvacio.gif" /></div>
    </div>
    }
</div>
     