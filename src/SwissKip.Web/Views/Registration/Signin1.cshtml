@using System.Configuration
@model SwissKip.Web.Models.UserCreateModel
@{
    ViewBag.Title = "Registration";
}

<div style="clear:both; height:60px;"></div>

<div id="cajaregistro">
    <div>
        <div style="padding-bottom:10px;padding-top:7px;"><span class="rojo22">Step 1 of 6:</span> <span class="black22">Complete your Personal Information.</span></div>
    </div>
    <div style="width:540px;margin:auto; margin-top:50px;">
        <div class="registrofoto">
            <div class="foto"><img src="/content/images/sinfoto.gif" with=150 height=160 /><br />
            <input type="file" name="file" id="file"/></div>
            @*<div>change picture</div>*@
        </div>

        <div class="interior1-contenido">
         @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
                <div class="interior1-form-1">
                    <div class="interior1-form-text1 negro14">First Name</div>
                    <div class="interior1-form-inpt1">@Html.TextBoxFor(x => x.FirstName, new { @class = "cajausername", onpaste = "return false", oncopy = "return false" })
                    <div>@Html.ValidationMessageFor(x => x.FirstName)</div></div>
                </div>
                <div class="interior1-form-1">
                    <div class="interior1-form-text1 negro14">Last Name</div>
                    <div class="interior1-form-inpt1">@Html.TextBoxFor(x => x.LastName, new { @class = "cajausername", onpaste = "return false", oncopy = "return false" })
                    <div>@Html.ValidationMessageFor(x => x.LastName)</div></div>
                </div>
                <div class="interior1-form-1">
                    <div class="interior1-form-text1 negro14">Email</div>
                    <div class="interior1-form-inpt1">@Html.TextBoxFor(x => x.Email, new { @class = "cajausername", onpaste = "return false", oncopy = "return false" })
                    <div>@Html.ValidationMessage("Email")</div></div>
                </div>
                <div class="interior1-form-1">
                    <div class="interior1-form-text1 negro14">Username*</div>
                    <div class="interior1-form-inpt1">@Html.TextBoxFor(x => x.UserName, new { @class = "cajausername", onpaste = "return false", oncopy = "return false" })
                    <div>@Html.ValidationMessageFor(x => x.UserName)</div></div>
                </div>
                <div class="interior1-form-1">
                    <div class="interior1-form-text1 negro14">Password*</div>
                    <div class="interior1-form-inpt1">@Html.PasswordFor(x => x.Password, new { @class = "cajausername", onpaste = "return false", oncopy = "return false" })
                    <div>@Html.ValidationMessageFor(x => x.Password)</div></div>
                </div>
                @*<div class="interior1-form-1">
                    <div class="interior1-form-text1 negro14">Country</div>
                    <div class="interior1-form-inpt1">@Html.DropDownList(x => x.CountryId, null, null, new { @class = "caja400x23" })</div>
                </div>*@

                <div style="clear:both;">
                    <div style="margin-top:25px;"><input type="submit" value="Next" class="botonext" /><br><br>
                    </div>
                </div>
                <div align="left">*Be carefull with your username and password, you won't get any reminder displayed.</div>
                
         }
        </div>

    </div>

    <div style="clear:both; height:40px;"></div>
    <div class="registropasos">
                <div style="float:left;"><img src="/content/images/processno.gif" /></div>
                <div style="float:left;"><img src="/content/images/lineprocessok.gif" /></div>
                <div style="float:left;"><img src="/content/images/processvacio.gif" /></div>
                <div style="float:left;"><img src="/content/images/lineprocess.gif" /></div>
                <div style="float:left;"><img src="/content/images/processvacio.gif" /></div>
                <div style="float:left;"><img src="/content/images/lineprocess.gif" /></div>
                <div style="float:left;"><img src="/content/images/processvacio.gif" /></div>
                <div style="float:left;"><img src="/content/images/lineprocess.gif" /></div>
                <div style="float:left;"><img src="/content/images/processvacio.gif" /></div>
                <div style="float:left;"><img src="/content/images/lineprocess.gif" /></div>
                <div style="float:left;"><img src="/content/images/processvacio.gif" /></div>
   </div>
</div>
  