                    {
                        <div style="width:70px; margin-left:15px; height:50px; margin-bottom:10px; float:left;">
                        <div style="float:left; margin-top:15px;">@Html.RadioButtonFor(x => x.IconSelected, x.IconId)</div>
                        <div style="float:left;"><img src=@x.IconPath /></div>
                        </div>
                    }*@


                    <div style="width:70px; margin-left:15px; height:50px; margin-bottom:10px; float:left;">
                        <div style="float:left; margin-top:15px;">@Html.RadioButtonFor(x => x.IconId, 1)</div>
                        <div style="float:left;"><img src="/content/images/candado.png" /></div>
                    </div>
                    <div style="width:70px; margin-left:15px; height:50px; margin-bottom:10px; float:left;">
                        <div style="float:left; margin-top:15px;">@Html.RadioButtonFor(x => x.IconId, 2)</div>
                        <div style="float:left;"><img src="/content/images/caja.png" /></div>
                    </div>
                    <div style="width:70px; margin-left:15px; height:50px; margin-bottom:10px; float:left;">
                        <div style="float:left; margin-top:15px;">@Html.RadioButtonFor(x => x.IconId, 3)</div>
                        <div style="float:left;"><img src="/content/images/camara.png" /></div>
                    </div>
                    <div style="width:70px; margin-left:15px; height:50px; margin-bottom:10px; float:left;">
                        <div style="float:left; margin-top:15px;">@Html.RadioButtonFor(x => x.IconId, 4)</div>
                        <div style="float:left;"><img src="/content/images/alto.png" /></div>
                    </div>

                </div>
                <div style="width:300px; text-align:center; float:left;">
                    <spa class="rojo14"><u>Frase personal</u></spa><br /><br /><br /><br />
                    @Html.TextBoxFor(x => x.SecretPhrase, new { @class = "caja230x30", @value = "Escribe tu frase personal" })
                
                </div>

