                    <spa class="rojo14"><u>Color</u></spa><br /><br />

                    <div style="width:70px; margin-left:15px; height:50px; margin-bottom:10px; float:left;">
                        <div style="float:left; margin-top:15px;">@Html.RadioButtonFor(x => x.ColourId, 1)</div>
                        <div style="float:left;"><img src="/content/images/marron.png" /></div>
                    </div>
                    <div style="width:70px; margin-left:15px; height:50px; margin-bottom:10px; float:left;">
                        <div style="float:left; margin-top:15px;">@Html.RadioButtonFor(x => x.ColourId, 2)</div>
                        <div style="float:left;"><img src="/content/images/verde.png" /></div>
                    </div>
                    <div style="width:70px; margin-left:15px; height:50px; margin-bottom:10px; float:left;">
                        <div style="float:left; margin-top:15px;">@Html.RadioButtonFor(x => x.ColourId, 3)</div>
                        <div style="float:left;"><img src="/content/images/rojo.png" /></div>
                    </div>
                    <div style="width:70px; margin-left:15px; height:50px; margin-bottom:10px; float:left;">
                        <div style="float:left; margin-top:15px;">@Html.RadioButtonFor(x => x.ColourId, 4)</div>
                        <div style="float:left;"><img src="/content/images/azul.png" /></div>
                    </div>
                </div>
            </div>

    </div>

    <div style="float:right; margin-right:200px; margin-top:50px;margin-bottom:70px;">
        <div style=" float:right;"><input type="image" value="NEXT" class="button red" /></div>
        <div style="float:right;margin-right:10px;"><a href="javascript:history.back(-1);"><input type="button" value="BACK" class="button red" /></a></div>
    </div>

    }
