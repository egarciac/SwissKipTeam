@model List<SwissKip.Web.Models.WitnessAddModel>
@{
    ViewBag.Title = "Witness";
}
<div id="contenido">
    <div style="float: left; padding-left: 100px;">
        <div class="rojo25" style="width:738px;">
            <div style="float: left;">My Account :: @ViewBag.Title</div>
            <div style="float:right; padding-top:10px;" class="negro12">
                @Html.ActionLink("[+] My Account", "Index", "MyAccount")
                &nbsp;&nbsp;&nbsp;
                @Html.ActionLink("[+] Change Password", "ChangePassword", "Owner")
                &nbsp;&nbsp;&nbsp;
                @Html.ActionLink("[+] Witness", "EditWitness", "Owner")
                &nbsp;&nbsp;&nbsp;
                @Html.ActionLink(" [+] Recipient","AddRecipient","Owner")
            </div>
        </div>
        <div style="float: left; width: 738px; height: 1px; z-index: 1; margin-top: -3px;
            background: #b5b5b3;">
        </div>
        <div style="float: left; padding-top: 20px;">
            <div style="float: left; width: 580px; background-color:Silver">
                <div style="width: 550px; height: 35px;">
                    <div style="float: left; width: 125px;" class="negro13b">First Name</div>
                    <div style="float: left; width: 125px;" class="negro13b">Last Name</div>
                    <div style="float: left; width: 300px;" class="negro13b">Email</div>
                </div>

            </div>
        </div>
        @using (Html.BeginForm())
        {
            for (int index = 0; index < this.Model.Count; index++)
            {
                var witness = this.Model[index];
                    <div style="float: left; padding-top: 20px;">
                        <div style="float: left; width: 580px;">
                            <div style="float: left; width: 550px; padding-top: 8px;">
                                <div style="float: left; width: 125px;" class="negro13b">@witness.FirstName</div>
                                <div style="float: left; width: 125px;" class="negro13b">@witness.LastName</div>
                                <div style="float: left; width: 200px;" class="negro13b">@witness.Email</div>
                                <div style="float: left; width: 100px;" class="negro13b">@Html.ActionLink("Remove", "Delete", new { id= witness.Id })</div>
                            </div>
                        </div>
                    </div>
            }
        
        <div style="float: left; width: 738px; margin-top: 15px; height: 1px; background: #b5b5b3;">
        </div>
        <div style="float: left; width: 738px; padding-top: 4px;">
        @Html.ActionLink("Add new witness", "AddWitnesses", null, new { @class = "addRow" })
        <div style="float: right;">
                <input type="image" name="Enviar" value="Enviar" src="~/Content/images/guardar.png" />
        </div>
            <div style="float: right; padding-right: 5px;">
                <a href="@Url.Action("Index")"><img src="~/Content/images/volver.png" border="0"></a>
            </div>
        </div>
        }
    </div>
</div>