@model SwissKip.Web.Models.RecipientPanelModel
@{
    ViewBag.Title = "Recipient";
}

<div id="contenido">
  	<div style="float:left; padding-left:30px;">
    @using (Html.BeginForm())
    {
    	<div style="z-index:0;">
            @if (this.Model.MyAccountWidget1.IsOwner)
            {    <div style="float:left;"><a href="/Owner/" onMouseDown="MM_swapImage('menu11','','/Content/images/owner-off.png',1)" onMouseOver="MM_swapImage('menu11','','/Content/images/owner.png',0)" onMouseOut="MM_swapImgRestore()"><img src="/Content/images/owner-off.png" border="0" name="menu11"></a></div>  }
            else
            {    <div style="float:left;"><img src="/Content/images/owner-off.png" border="0" name="menu11"></div>  }
            
            @if (this.Model.MyAccountWidget1.IsWitness)
            {    <div style="float:left; padding-left:8px;"><a href="/Witness/" onMouseDown="MM_swapImage('menu12','','/Content/images/testigo.png',1)" onMouseOver="MM_swapImage('menu12','','/Content/images/testigo-on.png',0)" onMouseOut="MM_swapImgRestore()"><img src="/Content/images/testigo.png" border="0" name="menu12"></a></div>  }
            else
            {    <div style="float:left; padding-left:8px;"><img src="/Content/images/testigo.png" border="0" name="menu12"></div>  }
            
            @if (this.Model.MyAccountWidget1.IsDataheir)
            {    <div style="float:left; padding-left:8px;"><a href="/Recipient/" onMouseDown="MM_swapImage('menu13','','/Content/images/bot_beneficiario_rojo.gif',1)" onMouseOver="MM_swapImage('menu13','','/Content/images/bot_beneficiario_rojo.gif',0)" onMouseOut="MM_swapImgRestore()"><img src="/Content/images/bot_beneficiario_rojo.gif" border="0" name="menu13"/></a></div>    }
            else
            {    <div style="float:left; padding-left:8px;"><img src="/Content/images/bot_beneficiario_rojo.gif" border="0"/></div>  }

        </div>
        <div style="float:left; margin-top:-1px;">
    		<div style="float:left; width:955px; height:1px; background:#b5b5b3;"></div>
        </div>
        <div style="float:left; padding-left:17px; width:830px;">
            <div style="float:left; margin-top:-1px;">
    	        @Html.Partial("_MyAccountWidget", Model.MyAccountWidget1)
            </div>
            <div style="float:left; padding-left:17px; width:400px;">
                <div style="float:left; padding-top:40px; width:700px;" class="negro14">You are dataheir of <strong>1 owner(s):</strong></div>
            </div>
            <div>
               @* @for (int index = 0; index < this.Model.Count; index++)
                {
                    var recipientFromOwner = this.Model[index].MyAccountWidget1;*@

                    <div style="float:left; padding-left:17px; width:830px;">
                        <div style="float:left; padding-top:15px;" class="negro14"><strong>@Model.MyAccountWidget1.FullName</strong></div>
                        <div style="float:left; padding-top:3px; width:850px;" class="negro14">Usted es beneficiario de @Model.MyAccountWidget1.OwnerFullName.</div>
                        @*<div style="float:left; padding-top:3px; width:850px;" class="negro14">El <strong>XXXXXX</strong> se le envió una alerta para confirmar que sigue siendo beneficiario activo. Esta se encuentra <strong>XXXXXX</strong>.</div>*@
                        <div style="float:left; padding-top:14px;">
                            <div style="float:left;"> 
                            <a href='@Url.Action("MessageSent", "Recipient", new { value = Model.MyAccountWidget1.UserIdFather })' onMouseDown="MM_swapImage('menu14','','/Content/images/reportar-muerte-on.png',1)" onMouseOver="MM_swapImage('menu14','','/Content/images/reportar-muerte-on.png',0)" onMouseOut="MM_swapImgRestore()"><img src="/Content/images/reportar-muerte-on.png" border="0" name="menu14"></a>
                            </div>
                            <div style="float:left; padding-left:7px;"><img src="/Content/images/confirmar.png" style="visibility:hidden"></div>
                        </div>
                    </div>
                
                    @*if (index != Model.Count)
                    {
                        <div style="float:left; width:955px; margin-top:24px; height:1px; background:#b5b5b3;"></div>
                    }*@
                @*}*@
            </div>
       </div>
    }
    </div>
  </div>
