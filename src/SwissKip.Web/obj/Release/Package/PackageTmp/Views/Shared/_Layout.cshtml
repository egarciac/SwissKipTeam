@using SwissKip.Web
<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>@ViewBag.Title</title>
    <title>Swiss Kip</title>
    @Styles.Render("~/Content/themes/base/css", "~/Content/css")
</head>
<body>
    <div id="general">
        <div id="cabecera">
            <a href="/Home/Index">
                <div id="logo"></div>
            </a>
            <div id="bienvenido" class="rojo">
                @if (this.Context.User.Identity.IsAuthenticated)
                {
                    <p>
                        Welcome <strong>@Current.User.FirstName </strong>
                        <br/>
                        @Html.ActionLink("Sign Out","SignOut","Authentication")
                    </p>
                }
                else
                {
                    <p>
                        <strong>
                            @Html.ActionLink("Sign In", "SignIn", "Authentication", null, new { id = "registerLink", @class = "rojo" })
                        </strong>
                        /
                        <strong>
                            @Html.ActionLink("Create an Account", "Create", "NewAccount", null, new { id = "registerLink", @class = "rojo" })
                        </strong>
                    </p>
                }

            </div>
        </div>

        <div id="menutop">
            <div id="menucenter">
                <ul>
                    <li><a href="/Home/WhatIsIt">What is it?</a></li>
                    <li><a href="/Home/HowIsTheUse">What's the use?</a></li>
                    <li><a href="/Home/HowDoesItWork">How does it work?</a></li>
                    <li><a href="/Home/HowMuch">How much?</a></li>
                    <li><a href="/Owner"><i>my</i>swisskip</a></li>
                </ul>
            </div>
        </div>

        <div>
            @RenderBody()
        </div>

        <footer>
            <div id="piedepagina">
                <div id="menupie">
                    <nav id="mnpie">
                        <ul>
                            <li><a href="/Home/We">We</a></li>
                            <li><a href="/Home/Faqs">FAQs</a></li>
                            <li><a href="/Home/Terms">Terms</a></li>
                            <li><a href="/Home/PrivacyPolicy">Privacy Policy</a></li>
                            <li><a href="/Home/Contact">Contact</a></li>
                        </ul>
                    </nav>
                </div>
                <div class="pie-right">
                    <div class="pie-all textopie">
                        © 2012 All Rights Reserved. SwissKip® is a registered trademark
                    </div>
                    <div class="pie-img" align="right">
                        <a href="#">
                            <img src="~/Content/images/paypar.jpg" border="0" />
                        </a><a href="#">
                            <img src="~/Content/images/mastercard.jpg" border="0" />
                        </a><a href="#">
                            <img src="~/Content/images/visa.jpg" border="0" />
                        </a>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery", "~/bundles/jqueryval")
    @RenderSection("scripts", required: false)
</body>
</html>
